<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/lightgreen"
        tools:context=".AboutUs">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CORE MEMBERS"
            android:textSize="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:elevation="10dp"
                android:paddingTop="0dp"
                android:src="@drawable/subhram" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="50dp"
            android:background="#ffff"
            app:cardCornerRadius="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffff">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:elevation="10dp"
                    android:src="@drawable/raja" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:elevation="10dp"
                android:paddingTop="0dp"
                android:src="@drawable/sourav" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"

            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:paddingTop="10dp"
                android:text="Subhram Patel"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:text="System Trainee" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"

            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Raja Ramesh"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:text="Database and Backend" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"

            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Sourav Kumar"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:text="Security analyst" />
        </LinearLayout>


    </GridLayout>

    </RelativeLayout>
